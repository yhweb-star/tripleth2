<%###.*_*.### 食事記事新規投稿ページ ###.*_*.###%>


<%#`````` ヘッダー ```````#%>
<%= render "shared/header" %>
<%#```` 後ほど置き換え ````#%>


<div class="post post-processes">

  <%#----------- 一覧に戻るボタン
    *リンク先仮置き*
    *bootstrap仮置き* -----------#%>
  <%= link_to "一覧に戻る", successes_path ,class:"btn btn-primary back-top-btn" %>


  <%#----------- 記事投稿フォーム 
    ※モデル仮置き※
    ※url仮置き※ --------------#%>
  <%= form_with model:@success, url: successes_path ,class: "processes-form", local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

    <div class="post-prosecces-title">
      <%= f.label :ジャンル, class: "form-label"%>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
    </div>
    <div class="post-prosecces-title">
      <%= f.label :タイトル, class: "form-label"%>
      <%= f.text_field :title, autofocus: true, class: "input-box title-box", placeholder: "成功体験などを記入"%>
    </div>
    <div class="post-prosecces-title">
      <%= f.label :画像, class: "form-label"%>
      <%= f.file_field :image, class: "input-box title-box", placeholder: "成功体験などを記入"%>
    </div>
    <div class="post-prosecces-text">
        <%= f.label :本文, class: "form-label"%>
        <%= f.text_area :text, class: "input-box text-box", placeholder: "ここに本文を記入"%>
    </div>

    <%#--------- 投稿ボタン 
    *bootstrap仮置き* ----------#%>
    <div class="submit-button">
      <%= f.submit "投稿する", class:"btn btn-primary submit-end-btn" %>
    </div>  
  <% end %>
</div>

<footer></footer>
