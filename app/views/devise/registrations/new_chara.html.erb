<%# 2ページ目 %>
<%# ヘッダー部分の呼び出し %>
<%= render "shared/header"%>

<%= form_with model: @chara, url: charas_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%# エラー文が出るように、部分テンプレートを呼び出し %>
  <%= render "devise/shared/error_messages", resource: @chara %> 

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自己紹介</label>
    </div>
    <%= f.text_area :text, class:"input-default", id:"nickname", placeholder:"例) 目標は5kg減量！", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      都道府県
    </div>
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      性別
    </div>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      年齢
    </div>
    <%= f.text_field :age, class:"input-default", placeholder: "例) 27(半角数字のみ)", type: "number" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      仕事のスタイル
    </div>
    <%= f.collection_select(:job_style_id, JobStyle.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      日常の運動量
    </div>
    <%= f.collection_select(:exercise_style_id, ExerciseStyle.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class='register-btn'>
    <%# 会員登録ボタン %>
    <%= f.submit "次へ(3/3)" ,class:"register-red-btn" %>
  </div>
  
</div> <%# form-wrap %>
<% end %>

<%= render "devise/shared/links" %>
